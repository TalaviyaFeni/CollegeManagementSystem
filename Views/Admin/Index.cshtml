@model List<CollegeManagementSystem.Models.Faculty>
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-5">
    <h2 class="text-center mb-4 text-primary fw-bold">Admin Dashboar</h2>

    <!-- ✅ Dashboard summary cards -->
    <div class="row text-center mb-4">
        <div class="col-md-3">
            <div class="card shadow-sm border-0 p-3">
                <h5>Total Faculties</h5>
                <h3 class="text-primary fw-bold">@ViewBag.FacultyCount</h3>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0 p-3">
                <h5>Departments</h5>
                <h3 class="text-success fw-bold">@ViewBag.DepartmentCount</h3>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0 p-3">
                <h5>Courses</h5>
                <h3 class="text-warning fw-bold">@ViewBag.CourseCount</h3>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0 p-3">
                <h5>Students</h5>
                <h3 class="text-danger fw-bold">@ViewBag.StudentCount</h3>
            </div>
        </div>
    </div>

    <!-- ✅ Faculty List -->
    <div class="card shadow-sm p-4">
        <h4 class="text-secondary mb-3">Faculty Members</h4>

        @if (Model != null && Model.Count > 0)
        {
            <table class="table table-striped table-bordered">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>DepartmentName</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var faculty in Model)
                    {
                        <tr>
                            <td>@faculty.Id</td>
                            <td>@faculty.Name</td>
                            <td>@faculty.DepartmentName</td> <!-- ✅ FIXED LINE -->
                            <td>@faculty.Email</td>
                            <td>
                                <a href="/Faculty/Courses/@faculty.Id" class="btn btn-sm btn-primary">View Courses</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-warning text-center">No faculty records found.</div>
        }
    </div>
</div>
