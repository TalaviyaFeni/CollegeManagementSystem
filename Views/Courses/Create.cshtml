@model CollegeManagementSystem.Models.Course

@{
    ViewData["Title"] = "Add Course";
}

<h2>Add Course âœš</h2>

<form asp-action="Create" method="post">
    <div class="form-group mb-3">
        <label>Course Name</label>
        <input asp-for="CourseName" class="form-control" />
        <span asp-validation-for="CourseName" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label>Department Name</label>
        <input asp-for="DepartmentName" class="form-control" />
        <span asp-validation-for="DepartmentName" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label>Credits</label>
        <input asp-for="Credits" type="number" class="form-control" />
        <span asp-validation-for="Credits" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>
