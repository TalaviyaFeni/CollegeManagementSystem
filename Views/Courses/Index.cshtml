@model IEnumerable<CollegeManagementSystem.Models.Course>

@{
    ViewData["Title"] = "Courses List";
}

<h2 class="mb-3">Courses</h2>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-success">✚ Add Course</a>
</div>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Course Name</th>
            <th>Department</th>
            <th>Credits</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.CourseName</td>
                <td>@course.DepartmentName</td>
                <td>@course.Credits</td>
                <td>
                    <a asp-action="Details" asp-route-id="@course.Id" class="btn btn-info btn-sm">👁️ View</a>
                    <a asp-action="Edit" asp-route-id="@course.Id" class="btn btn-warning btn-sm">✏️ Edit</a>
                    <a asp-action="Delete" asp-route-id="@course.Id" class="btn btn-danger btn-sm">🗑️ Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
