@model CollegeManagementSystem.Models.Department
@{
    ViewData["Title"] = "Delete Department";
}

<div class="container mt-4">
    <h2 class="text-danger mb-4"><i class="bi bi-trash"></i> Delete Department</h2>

    <div class="alert alert-warning">
        <strong>Are you sure?</strong> You are about to delete the department:
    </div>

    <div class="card p-4 shadow-sm mb-4">
        <h5 class="card-title">@Model.DepartmentName</h5>
        <p class="card-text">@Model.Description</p>
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Confirm Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Cancel
            </a>
        </div>
    </form>
</div>
