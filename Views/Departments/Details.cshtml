@model CollegeManagementSystem.Models.Department

@{
    ViewData["Title"] = "Department Details";
}

<div class="container mt-4">
    <h2 class="text-primary mb-4">Department Details 👁️</h2>

    <div class="card p-4 shadow-sm">
        <p><strong>ID:</strong> @Model.Id</p>
        <p><strong>Department Name:</strong> @Model.DepartmentName</p>
        <p><strong>Description:</strong> @Model.Description</p>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">✏️ Edit</a>
        <a asp-action="Index" class="btn btn-secondary">⬅️ Back to List</a>
    </div>
</div>
