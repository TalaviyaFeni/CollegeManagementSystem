@model IEnumerable<CollegeManagementSystem.Models.Department>

@{
    ViewData["Title"] = "Departments List";
}

<div class="container mt-4">
    <h2 class="mb-3 text-center text-primary">Departments</h2>

    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-success">➕ Add Department</a>
    </div>

    <table class="table table-striped table-bordered shadow-sm">
        <thead class="table-primary">
            <tr>
                <th>ID</th>
                <th>Department Name</th>
                <th>Description</th>
                <th style="width: 220px;">Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.DepartmentName</td>
                <td>@item.Description</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">👁️ View</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">✏️ Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">🗑️ Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
