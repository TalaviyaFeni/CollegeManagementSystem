@model IEnumerable<CollegeManagementSystem.Models.Faculty>

@{
    ViewData["Title"] = "Faculty List";
}

<h2 class="text-center my-3">Faculty List 👩‍🏫👨‍🏫</h2>

<div class="text-end mb-3">
    <a asp-action="Create" class="btn btn-success">Add ✚</a>
</div>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>DepartmentName</th>
            <th>Date of Joining</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.DepartmentName</td>
                <td>@item.DateOfJoining?.ToShortDateString()</td>
                
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">View 👁️</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit ✏️</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete 🗑️</a>
                </td>
            </tr>
        }
    </tbody>
</table>
