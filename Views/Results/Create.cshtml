@model CollegeManagementSystem.Models.Result

@{
    ViewData["Title"] = "Add Result";
}

<h2>Add Result</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Student Name</label>
        <input asp-for="StudentName" class="form-control" />
        <span asp-validation-for="StudentName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Subject</label>
        <input asp-for="Subject" class="form-control" />
        <span asp-validation-for="Subject" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Marks</label>
        <input asp-for="Marks" class="form-control" type="number" />
        <span asp-validation-for="Marks" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Grade</label>
        <input asp-for="Grade" class="form-control" />
        <span asp-validation-for="Grade" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Save</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Back</a>
</form>
