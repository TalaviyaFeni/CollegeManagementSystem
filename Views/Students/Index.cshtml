@model IEnumerable<CollegeManagementSystem.Models.Student>

<h2>Students List</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Student</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Enrollment No.</th>
            <th>Department</th>
            <th>Admission Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Name</td>
                <td>@student.Email</td>
                <td>@student.EnrollmentNumber</td>
                <td>@student.DepartmentName</td>
                <td>@student.AdmissionDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@student.Id" class="btn btn-info btn-sm">View</a>
                    <a asp-action="Edit" asp-route-id="@student.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@student.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
